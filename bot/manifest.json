{
  "manifest_version": 3,
  "name": "Local AI Bridge",
  "version": "0.1.0",
  "description": "Send selected text to a local AI via WebSocket and show the reply.",
  "permissions": ["storage", "nativeMessaging", "tabs"],
  "host_permissions": [
    "ws://127.0.0.1/*",
    "ws://localhost/*",
    "http://127.0.0.1:5050/*",
    "http://localhost:5050/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Local AI Bridge",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://grok.com/*",
        "https://chat.qwen.ai/*",
        "https://gemini.google.com/app*",
        "https://www.perplexity.ai/*",
        "https://chat.deepseek.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
